<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stk.ui.LogUpdateActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="更新"
            android:textColor="@color/layoutBackground"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:id="@+id/logLayout"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="match_parent"
               android:text="日志更新"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:textSize="16sp"
               android:gravity="center"
               android:textColor="@color/tabColor"
               android:id="@+id/logText"
               android:layout_height="wrap_content"/>

           <ImageView android:layout_width="match_parent"
                      android:layout_below="@+id/logText"
                      android:id="@+id/logIm"
                      android:background="@color/tabColor"
                      android:layout_height="2dp"/>

       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/proLayout"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="match_parent"
               android:text="项目更新"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:textSize="16sp"
               android:gravity="center"
               android:textColor="@color/black"
               android:id="@+id/proText"
               android:layout_height="wrap_content"/>

           <ImageView android:layout_width="match_parent"
                      android:layout_below="@+id/proText"
                      android:id="@+id/proIm"
                      android:background="@color/white"
                      android:layout_height="2dp"/>

       </RelativeLayout>
       <RelativeLayout
           android:id="@+id/bussLayout"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="match_parent"
               android:text="商机更新"
               android:paddingTop="7dp"
               android:paddingBottom="7dp"
               android:textSize="16sp"
               android:gravity="center"
               android:textColor="@color/black"
               android:id="@+id/bussText"
               android:layout_height="wrap_content"/>

           <ImageView android:layout_width="match_parent"
                      android:layout_below="@+id/bussText"
                      android:id="@+id/bussIm"
                      android:background="@color/white"
                      android:layout_height="2dp"/>

       </RelativeLayout>
   </LinearLayout>


  <android.support.v4.view.ViewPager
      android:id="@+id/updateViewPager"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  </android.support.v4.view.ViewPager>

</LinearLayout>
