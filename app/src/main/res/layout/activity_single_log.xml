<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_single_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stk.ui.SingleLogActivity">

    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="日志编辑"
            android:textColor="@color/layoutBackground"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/sdasdkgg"
        android:textColor="#ff0000"
        android:text="120字以内*"
        android:layout_below="@+id/top_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_below="@+id/sssss"
        android:id="@+id/time_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划开始时间"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/time_begin"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:text="2016-1-1"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划结束时间"
            android:textColorHint="#d0d0d0"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/time_end"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:text="2016-1-1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/time_layout"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/update_log"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/edit_btn_selector"
            android:text="更新"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_height="35dp"
        />

        <ImageView android:layout_width="10dp"
                   android:background="@color/layoutBackground"
                   android:layout_height="match_parent"/>

        <Button
            android:id="@+id/delete_log"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/edit_btn_selector"
            android:text="删除"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_height="35dp"
        />
    </LinearLayout>


    <RelativeLayout
        android:padding="5dp"
        android:id="@+id/sssss"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/log_write_shape"
        android:layout_below="@+id/sdasdkgg"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/log_item"
            android:hint="120字以内"
            android:gravity="top"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</RelativeLayout>
