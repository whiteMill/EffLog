<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layoutBackground"
    tools:context="com.stk.fragment.MessageFragment">

    <RelativeLayout
        android:id="@+id/top_re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/layoutBackground"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/plan_layout"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@drawable/layout_selecor"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/plan_time"
            android:visibility="gone"
            android:paddingTop="15dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="王磊回复我:123"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plan_mess"
            android:visibility="gone"
            android:maxLength="15"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView3"
        />

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="日程提醒"
            android:textColor="@color/black"
            android:paddingLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
        />
    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:background="@color/tabTex"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/log_layout"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@drawable/layout_selecor"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/log_time"
            android:visibility="gone"
            android:paddingTop="15dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="王磊回复我:123"
            android:paddingLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/log_mess"
            android:visibility="gone"
            android:maxLength="15"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView8"
           />

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="日志提醒"
            android:textColor="@color/black"
            android:paddingLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:background="@color/tabTex"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/buss_layout"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:clickable="true"
        android:background="@drawable/layout_selecor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/buss_time"
            android:visibility="gone"
            android:paddingTop="15dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="王磊回复我:123"
            android:paddingLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buss_mess"
            android:visibility="gone"
            android:maxLength="15"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView7"
        />

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="商机提醒"
            android:textColor="@color/black"
            android:paddingLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="18sp"
        />
    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:background="@color/tabTex"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/pro_layout"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:clickable="true"
        android:background="@drawable/layout_selecor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/pro_time"
            android:visibility="gone"
            android:paddingTop="15dp"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:text="王磊回复我:123"
            android:paddingLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pro_mess"
            android:visibility="gone"
            android:maxLength="15"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView6"
        />

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text="项目提醒"
            android:textColor="@color/black"
            android:paddingLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="18sp"
        />
    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:background="@color/tabTex"
        android:layout_height="0.5dp"/>

</LinearLayout>
