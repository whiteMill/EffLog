<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stk.ui.AddLogActivity">

    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="日志添加"
            android:textColor="@color/layoutBackground"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/sdasdkgg"
        android:textColor="#ff0000"
        android:text="120字以内*"
        android:layout_below="@+id/top_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/sdasdkgg"
        android:padding="5dp"
        android:id="@+id/sssss"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/log_write_shape">

        <EditText
            android:id="@+id/log_item"
            android:hint="120字以内"
            android:gravity="top"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/sssss"
        android:id="@+id/time_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginLeft="8dp"
                      android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:gravity="center_vertical"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/time_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="16sp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:text="2016-1-1"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal"
                      android:layout_marginLeft="8dp"
                      android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:textColorHint="#d0d0d0"
                android:gravity="center_vertical"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:text="2016-1-1"/>

        </LinearLayout>


    </LinearLayout>


    <Button

        android:layout_marginTop="27dp"
        android:id="@+id/sure_log"
        android:layout_width="match_parent"
        android:background="@drawable/edit_btn_selector"
        android:text="确认"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_height="35dp"
        android:layout_below="@+id/time_layout"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
