<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:text="TextVi少时诵诗书少时诵诗书少时诵诗书所所所所所所所所所所所少时诵诗书少时诵诗书少时诵诗书三四十ew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:paddingLeft="22dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:singleLine="true"
        android:id="@+id/buss_content"
        android:layout_toLeftOf="@+id/buss_name"/>

    <TextView
        android:text="截止 12-2 12:22"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buss_name"
        android:layout_alignRight="@+id/buss_name"
        android:layout_alignEnd="@+id/buss_name"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:id="@+id/end_time"/>
    <TextView
        android:text="2014-3-3"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/begin_time"
        android:layout_alignBaseline="@+id/end_time"
        android:layout_alignBottom="@+id/end_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:paddingLeft="23dp"/>
    <TextView
        android:text="王磊"
        android:paddingBottom="2dp"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/buss_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/buss_content"/>
