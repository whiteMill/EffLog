<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/front_color"
                android:layout_width="match_parent"
               android:layout_height="match_parent">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:background="@color/commentBackground"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginRight="10dp"
        android:layout_height="1px"></View>

    <TextView
        android:text="小路日少时诵诗书少时诵诗书少时诵诗书所所所所志"
        android:textSize="12sp"
        android:maxEms="8"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:id="@+id/buss_name"/>
    <TextView
        android:text="创建于 2016-12-2"
        android:textSize="12sp"
        android:textColor="@color/time_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buss_name"
        android:layout_alignLeft="@+id/buss_name"
        android:layout_alignStart="@+id/buss_name"
        android:paddingBottom="10dp"
        android:id="@+id/buss_time"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bussiness_pic"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>